<Window x:Class="HardwareStore_Zarina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardwareStore_Zarina"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <!--<StackPanel>-->
        <Rectangle Grid.RowSpan="1">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF0DD3DA" Offset="0.09"/>
                    <GradientStop Color="#FF0DDAC4" Offset="1"/>
                    <GradientStop Color="White" Offset="0.955"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image Grid.Row="0" Source="ImageTex/4882732.png" HorizontalAlignment="Left" Margin="5"></Image>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Margin="5" x:Name="NameStore">Магазин Техники</TextBlock>
    </Grid>
</Window>
